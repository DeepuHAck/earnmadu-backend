# Server Configuration
PORT=5000                    # Default development port
NODE_ENV=development        # development, production, or test

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/earnmadu    # Local MongoDB URI for development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars      # Replace with a secure random string
JWT_EXPIRES_IN=1d                                # Token expiration time
JWT_COOKIE_EXPIRES_IN=1                         # Cookie expiration in days

# Email Configuration
SMTP_HOST=smtp.gmail.com                        # Email service host
SMTP_PORT=587                                   # Email service port
SMTP_USER=your.email@gmail.com                 # Your email address
SMTP_PASS=your_app_specific_password          # Gmail app-specific password

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key          # Get from Google Cloud Console

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000            # Your frontend application URL

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000                  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100                  # Maximum requests per window

# Anti-Cheat Configuration
MAX_VIEWS_PER_DAY=50                         # Maximum video views per day
MAX_VIEWS_PER_IP=10                          # Maximum views per IP
IP_BAN_DURATION_HOURS=24                     # Duration of IP ban in hours

# Other Security Configurations
PASSWORD_RESET_TOKEN_EXPIRES_IN=10 